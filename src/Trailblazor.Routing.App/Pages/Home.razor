@using Trailblazor.Routing.Routes

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<a href="counter?differentParameterName=10">
    Counter with parameter
</a>

<button @onclick="@(() => NavigationManager.NavigateTo("counter?differentParameterName=10"))">
    Counter with parameter using the nav-manager
</button>

@code
{
    [CascadingParameter]
    public required RouterContext RouterContext { get; set; }

    [Inject]
    private IRouterContextAccessor RouterContextAccessor { get; set; } = null!;

    [Inject]
    private NavigationManager NavigationManager { get; set; } = null!;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        var routerContext = RouterContextAccessor.GetRouterContext();
    }
}
